<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ante.iNaruci"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/ime_aplikacije"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ante.iNaruci.MainActivity"
            android:label="@string/ime_aplikacije" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ante.iNaruci.PozoviOsoblje" />
        <activity android:name="com.ante.iNaruci.Izbornik" />
        <activity android:name="com.ante.iNaruci.Ponuda" />
        <activity android:name="com.ante.iNaruci.CameraPreview" />
    </application>

</manifest>
